{
  "name": "project-builder",
  "version": "1.0.0",
  "description": "Start kit for HTML/CSS/JS pages layout.",
  "author": "Alexander Motorygin",
  "license": "WTFPL",
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.thecoders.ru/a.motorygin/project-builder"
  },
  "scripts": {
    "test": "npm run test:pug && npm run test:style && npm run test:js",
    "test:pug": "glob-exec \"src/**/*.pug\" -- \"pug-lint {{files.join(' ')}}\"",
    "test:style": "stylelint \"src/**/*.scss\" --custom-syntax postcss-scss",
    "test:js": "eslint src/blocks/**/*.js src/js/**/*.js",
    "fix:style": "stylelint \"src/**/*.scss\" --custom-syntax postcss-scss --fix",
    "fix:js": "eslint src/blocks/**/*.js src/js/**/*.js --fix",
    "prettier:js": "prettier --check \"src/**/*.js\"",
    "prettier-fix:js": "prettier --write \"src/**/*.js\"",
    "start": "gulp",
    "build": "cross-env MODE=production gulp build",
    "lint-staged": "lint-staged",
    "deploy": "gulp deploy"
  },
  "lint-staged": {
    "*.{js,pug,md}": "editorconfig-cli",
    "*.pug": "pug-lint",
    "*.scss": "stylelint --custom-syntax postcss-scss",
    "*.js": "eslint"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "devDependencies": {
    "@babel/core": "^7.6.2",
    "@babel/preset-env": "^7.6.2",
    "@htmlacademy/editorconfig-cli": "^1.0.0",
    "autoprefixer": "^10.2.4",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.0.6",
    "browser-sync": "^2.26.7",
    "cpy": "^8.1.0",
    "cross-env": "^7.0.2",
    "css-mqpacker": "^7.0.0",
    "del": "^6.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "get-classes-from-html": "^1.0.1",
    "gh-pages": "^3.1.0",
    "glob-exec": "^0.1.1",
    "gulp": "^4.0.2",
    "gulp-cheerio": "^1.0.0",
    "gulp-csso": "^4.0.1",
    "gulp-debug": "^4.0.0",
    "gulp-json-concat": "^0.2.0",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^9.0.0",
    "gulp-pretty-html": "^2.0.10",
    "gulp-pug": "^4.0.1",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^5.1.0",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-svgmin": "^3.0.0",
    "gulp-svgstore": "^7.0.1",
    "gulp-uglify-es": "^3.0.0",
    "husky": "^4.2.3",
    "jstransformer-markdown-it": "^2.0.0",
    "lint-staged": "^10.0.9",
    "mkdirp": "^1.0.3",
    "path": "^0.12.7",
    "postcss": "^8.2.5",
    "postcss-import": "^14.0.0",
    "postcss-scss": "^4.0.6",
    "prettier": "2.8.1",
    "pug-lint": "^2.6.0",
    "sass": "^1.57.1",
    "stylelint": "^14.16.1",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-order": "^5.0.0",
    "stylelint-scss": "^4.3.0",
    "through2": "^4.0.2",
    "webpack": "^5.21.1",
    "webpack-stream": "^6.1.2"
  },
  "dependencies": {
    "sanitize.css": "^13.0.0",
    "swiper": "^8.4.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
